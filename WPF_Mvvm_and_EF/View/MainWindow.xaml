<Window x:Class="WPF_Mvvm_and_EF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Mvvm_and_EF"
        xmlns:model="clr-namespace:WPF_Mvvm_and_EF.Model;assembly=WPF_Mvvm_and_EF.Model"
        xmlns:view="clr-namespace:WPF_Mvvm_and_EF.View"
        mc:Ignorable="d"
        Title="FriendOrganizer" Height="450" Width="800"
        FontSize="20"
        >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <view:NavigationView DataContext="{Binding navigationViewModel}"/>
        <view:FriendDetailView Grid.Column="1" DataContext="{Binding FriendDetailViewModel}"/>
    </Grid>
</Window>
